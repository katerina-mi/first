<script>
var text = document.createElement ( 'p' )
text.innerHTML = "Never click here"
document.body.appendChild (text)

var img = document.createElement ( 'img' )
img.src = "https://media.istockphoto.com/photos/grey-squirrel-yawning-picture-id473012660?k=6&m=473012660&s=612x612&w=0&h=opzkOsCuudeI_l83My-WdfTiru2mpuwZMpVomymwC9c="

text.onclick = function ( event ) {
        document.body.appendChild (img)
}
</script>

